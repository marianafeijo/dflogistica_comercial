{
    "name": "Task",
    "type": "object",
    "properties": {
        "lead_id": {
            "type": "string",
            "description": "ID do lead associado"
        },
        "data_programada": {
            "type": "string",
            "format": "date",
            "description": "Data programada para execu\u00e7\u00e3o"
        },
        "tipo": {
            "type": "string",
            "enum": [
                "E-mail",
                "Liga\u00e7\u00e3o",
                "WhatsApp",
                "LinkedIn",
                "Follow-up",
                "Outro"
            ],
            "description": "Tipo de tarefa"
        },
        "descricao": {
            "type": "string",
            "description": "Descri\u00e7\u00e3o da tarefa"
        },
        "status": {
            "type": "string",
            "enum": [
                "Pendente",
                "Conclu\u00edda",
                "Cancelada"
            ],
            "default": "Pendente",
            "description": "Status da tarefa"
        },
        "responsavel": {
            "type": "string",
            "description": "E-mail do usu\u00e1rio respons\u00e1vel"
        },
        "empresa": {
            "type": "string",
            "description": "Nome da empresa (copiado do lead)"
        },
        "contatos": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "telefone": {
                        "type": "string"
                    },
                    "whatsapp": {
                        "type": "string"
                    },
                    "principal": {
                        "type": "boolean"
                    }
                }
            },
            "description": "Lista de contatos (copiado do lead)"
        },
        "contato_selecionado": {
            "type": "object",
            "properties": {
                "nome": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "telefone": {
                    "type": "string"
                },
                "whatsapp": {
                    "type": "string"
                }
            },
            "description": "Contato espec\u00edfico selecionado para a tarefa (WhatsApp/Liga\u00e7\u00e3o)"
        },
        "data_conclusao": {
            "type": "string",
            "format": "date-time",
            "description": "Data e hora de conclus\u00e3o"
        },
        "observacoes": {
            "type": "string",
            "description": "Observa\u00e7\u00f5es sobre a execu\u00e7\u00e3o"
        }
    },
    "required": [
        "lead_id",
        "data_programada",
        "tipo",
        "descricao",
        "responsavel"
    ]
}